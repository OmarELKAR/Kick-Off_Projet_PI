{% extends 'backComp.html.twig' %}



{% block main %}



    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Username</th>
            <th scope="col">email</th>
            <!--<th scope="col">ban</th>-->
        </tr>
        </thead>
        <tbody>
        {% for u in users %}
        <tr>
            <th scope="row">{{u.id}}</th>
            <td>{{ u.username }}</td>
            <td>{{ u.email }}</td>
            <td> <a class="btn btn-danger" href="{{ path('app_user_delete', {'id': u.id }) }}">Delete</a> </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
